<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/ui1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.绘制基础"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/ui1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.Paint详解"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ui1_1"
    />
    <Button
            android:id="@+id/ui1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.文字的绘制"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ui1_2"
    />
    <Button
            android:id="@+id/ui1_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.Canvas剪裁和变换"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ui1_3"
    />
    <Button
            android:id="@+id/ui1_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.绘制顺序"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ui1_4"
    />
    <Button
            android:id="@+id/ui1_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6.动画"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ui1_5"
    />
    <Button
            android:id="@+id/ui1_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7.动画进阶"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ui1_6"
    />
    <Button
            android:id="@+id/ui2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.onMeasure"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ui1_6"
    />
    <Button
            android:id="@+id/ui2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.仿写酷界面"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ui2_1"
    />

</androidx.constraintlayout.widget.ConstraintLayout>